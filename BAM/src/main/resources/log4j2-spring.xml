<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} - [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
    </Properties>
     Console output for logging
    <Appenders>
		Rolling File Appender
		<RollingFile name="FileAppender" fileName="logs/BAMLogs.log" 
		             filePattern="logs/log4j2-BAM-%d{yyyy-MM-dd}-%i.log">
		    <PatternLayout>
		        <Pattern>${LOG_PATTERN}</Pattern>
		    </PatternLayout>
		    <Policies>
		    	roll over policy based on size
		        <SizeBasedTriggeringPolicy size="10MB" />
		         roll over policy, right now it is set to 1 day can adjust to a week by using 7
	    		<TimeBasedTriggeringPolicy interval="1" />
		    </Policies>
		    <DefaultRolloverStrategy max="20"/>
		</RollingFile>
    </Appenders>
     file output for logging
    <Loggers>
        <AsyncLogger name="com.revature.bam" level="debug" additivity="false">
            <AppenderRef ref="FileAppender" />
        </AsyncLogger>
        <Root level="info">
            <AppenderRef ref="FileAppender" />
        </Root>
    </Loggers>

</Configuration>
 
<!-- Look at https://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/EnhancedPatternLayout.html 
	for information on patternlayout -->
